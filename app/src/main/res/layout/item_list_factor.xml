<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@color/white"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtDate"
                    style="@style/AppTheme.TextViewLableYello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="تاریخ :" />

                <TextView
                    android:id="@+id/date"
                    style="@style/AppTheme.TextViewLableBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txtDate" />

                <TextView
                    android:id="@+id/txtTime"
                    style="@style/AppTheme.TextViewLableYello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/date"
                    android:text="ساعت :" />

                <TextView
                    android:id="@+id/time"
                    style="@style/AppTheme.TextViewLableBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txtTime" />

                <TextView
                    android:id="@+id/txtPrice"
                    style="@style/AppTheme.TextViewLableYello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/time"
                    android:text="قیمت کل :" />

                <TextView
                    android:id="@+id/price"
                    style="@style/AppTheme.TextViewLableBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txtPrice" />

                <TextView
                    android:id="@+id/txtPaied"
                    style="@style/AppTheme.TextViewLableYello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@+id/price"
                    android:text="پرداخت شده :" />

                <TextView
                    android:id="@+id/paid"
                    style="@style/AppTheme.TextViewLableBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txtPaied" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@color/white">

                <TextView
                    android:id="@+id/txtshFactor"
                    style="@style/AppTheme.TextViewLableYello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:text="شماره فاکتور:" />

                <TextView
                    android:id="@+id/shFactor"
                    style="@style/AppTheme.TextViewLableBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txtshFactor" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tablet"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/tablet"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/web"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/web"
                        android:tint="@color/web"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/accepted"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:tint="@color/green_800"
                        android:src="@drawable/accept"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/printed"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/print"

                        android:visibility="gone" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtshLocker"
                    style="@style/AppTheme.TextViewLableYello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="شماره کمد:"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/shLocker"
                    style="@style/AppTheme.TextViewLableBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txtshLocker"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtshCard"
                    style="@style/AppTheme.TextViewLableYello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/shLocker"
                    android:text="شماره کارت:"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/shCard"
                    style="@style/AppTheme.TextViewLableBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txtshCard"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtTaradod"
                    style="@style/AppTheme.TextViewLableYello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="شماره تردد پرسنل:"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/taradod"
                    style="@style/AppTheme.TextViewLableBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txtTaradod"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtName"
                    style="@style/AppTheme.TextViewLableYello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="نام و نام خانوادگی عضویت:"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/name"
                    style="@style/AppTheme.TextViewLableBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/txtName"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtPersonelName"
                    style="@style/AppTheme.TextViewLableYello"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="نام و نام خانوادگی پرسنل:"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/personelName"
                    style="@style/AppTheme.TextViewLableBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txtPersonelName"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/showDetail"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/personImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/padding_small"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/user"
                        android:tint="@color/gray_400"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/reception"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="3dp"
                        android:tint="@color/green_800"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/reception"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/cardImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:tint="@color/purple"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/person"
                        android:visibility="gone" />
                </LinearLayout>

                <Button
                    android:id="@+id/showDetail"
                    style="@style/AppTheme.ButtonOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/padding_small"
                    android:text="نمایش اقلام فاکتور" />


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_corner_gray"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>