<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginTop="@dimen/margin_small"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name"
            style="@style/AppTheme.font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_small"
            android:text="ساندویچ هات داگ" />

        <TextView
            android:id="@+id/txtprice"
            style="@style/AppTheme.font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toLeftOf="@+id/name"
            android:text="قیمت واحد: " />

        <TextView
            android:id="@+id/price"
            style="@style/AppTheme.font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toLeftOf="@+id/txtprice"
            android:text="0" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtnumber"
                style="@style/AppTheme.font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_small"
                android:text="تعداد"
                android:textSize="@dimen/font_size_xlarge" />

            <ImageView
                android:id="@+id/increase"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_mini_small"
                android:layout_toLeftOf="@+id/txtnumber"
                android:src="@drawable/increase"
                android:tint="@color/orange_700" />

            <TextView
                android:id="@+id/numeric"
                style="@style/AppTheme.font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_toLeftOf="@+id/increase"
                android:text="0"
                android:textSize="@dimen/font_size_xlarge" />

            <ImageView
                android:id="@+id/decrease"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_mini_small"
                android:layout_toLeftOf="@+id/numeric"
                android:src="@drawable/decrease"
                android:tint="@color/orange_700" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/name"
            android:layout_marginTop="@dimen/margin_normal">

            <TextView
                android:id="@+id/txtsumprice"
                style="@style/AppTheme.font"
                android:textColor="@color/black_effective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_large"
                android:text="قیمت کل: " />

            <TextView
                android:id="@+id/sumprice"
                style="@style/AppTheme.font"
                android:textColor="@color/black_effective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_toLeftOf="@+id/txtsumprice"
                android:text=""/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>